<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="main.css">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="wrapper">
      <div class="header">
        <span>
          <nav>
              <a href="/playcards">Play Cards</a>
          </nav>
        </span>
        <span class="title">Edit card</span>
      </div>
      <div class="fields">
        <ul>
        <li class="msg">{{#messages}}<p>{{.}}</p>{{/messages}}</li>
        <form action="/edit" method="post">
          <input type="hidden" name="cardid" value="{{#result}}{{_id}}{{/result}}">
          <li><label>DeckName : {{#deck}}{{deckname}}{{/deck}}</li>
          <li><input type="text" name="question" value="{{#result}}{{question}}{{/result}}" placeholder="Question"></li>
          <li><input type="text" name="answer" value="{{#result}}{{answer}}{{/result}}" placeholder="Answer"></li>
          <li><button type="submit">Submit</button></li>
        </form>
        </ul>
      </div>
  </div>
  </body>
</html>
